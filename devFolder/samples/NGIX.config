http {
  # global settings go here
  server_tokens off;
  include /etc/nginx/mime.types;
  
  server {
    listen 80;
    server_name example.com;
    root /var/www/example.com;
    index index.html;
    
    location / {
      try_files $uri $uri/ /index.html;
    }
    
    location /api/ {
      proxy_pass http://localhost:3000/;
    }
  }
}
